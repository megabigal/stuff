import cv2 as cv
import numpy as np
import os
def crop(img):
    
    img =  cv.imread(img)
    if img is None:
        print(f"Failed to load image: {img}")
        return None
    h,w = img.shape[:2]
    minside = min(h, w)
    if h > w:
        #img = cv.resize(img, (h,h))
        start = (h - w) // 2
        img = img[start:start+w, :]
    else:
        start = (w - h) // 2
        img = img[:, start:start+h]
    img = cv.resize(img, (minside, minside), interpolation=cv.INTER_AREA)
    return img

